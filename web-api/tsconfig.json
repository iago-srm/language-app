
{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": [
      "dom",
      "es6",
      "es2017",
      "esnext.asynciterable"
    ],
    "skipLibCheck": true,
    "sourceMap": true,
    "outDir": "./dist",
    "types": ["node", "jest"],
    "moduleResolution": "node",
    "removeComments": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "baseUrl": "./src/",
    "paths": {
      "@adapters/repositories": ["adapters/repositories/index.ts"],
      "@adapters/REST-controllers": [
        "adapters/REST-controllers/index.ts"
      ],
      "@adapters/REST-middleware": [
        "adapters/REST-middleware/index.ts"
      ],
      "@application/use-cases": ["application/use-cases/index.ts"],
      "@application/ports": [
        "application/ports/index.ts"
      ],
      "@domain": [
        "domain/index.ts"
      ],
      "@frameworks/databases": ["frameworks/databases/index.ts"],
      "@frameworks/http": [
        "frameworks/http-server/index.ts"
      ],
      "@frameworks/services": [
        "frameworks/services/index.ts"
      ],
      "@common/logger": [
        "common/logger/index.ts"
      ],
      "@common/test-helpers": [
        "common/test-helpers/index.ts"
      ],
      "@common/locales": [
        "common/locales/index.ts"
      ],
      "@common/errors": [
        "common/errors/index.ts"
      ],
      "@/*": [
        "*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "src/__test__"
  ],
  "include": [
    "./src/**/*.tsx",
    "./src/**/*.ts"
  ]

}