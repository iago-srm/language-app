model User {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  email          String  @unique
  name           String?
  role           String  @default("STUDENT")
  hashedPassword String

  @@map("users")
}

