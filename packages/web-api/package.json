{
  "name": "@language-app/web-api",
  "version": "1.0.0",
  "description": "Domain API",
  "scripts": {
    "gen-env": "gen-env-types .env -o src/env.d.ts -e .",
    "build": "npx prisma generate && tsc",
    "dev": "cross-env NODE_ENV=development ts-node-dev -r tsconfig-paths/register --respawn  --exit-child --ignore-watch node_modules src/index.ts",
    "start": "cross-env NODE_ENV=production node -r ts-node/register/transpile-only -r tsconfig-paths/register ./build/auth-web-api/src/index.js",
    "test": "cross-env NODE_ENV=test jest --watchAll",
    "test:ci": "cross-env NODE_ENV=test jest --no-cache --runInBand",
    "format": "npx prettier --write .",
    "format:ci": "npx prettier --check .",
    "sync:db": "npx prisma db push --accept-data-loss",
    "docker:build": "docker build -t language-app-web-api -f ./Dockerfile ../..",
    "docker:exec": "docker exec -ti web-api /bin/sh"
  },
  "keywords": [],
  "author": "",
  "license": "ISC"
}
