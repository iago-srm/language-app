{
  "name": "@language-app/web-api",
  "version": "1.0.0",
  "description": "A proof of concept of a very complete NodeJS API",
  "scripts": {
    "echo": "echo \"Hello from web-api\" ",
    "tests:integration": "echo \"web-api integration tests\" ",
    "generate-initial-migration": "npx typeorm migration:generate -n Initial",
    "gen-env": "gen-env-types .env -o src/env.d.ts -e .",
    "build": "cross-env NODE_ENV=production tsc",
    "dev": "cross-env NODE_ENV=development ts-node-dev -r tsconfig-paths/register src/index.ts",
    "start": "node -r ts-node/register/transpile-only -r tsconfig-paths/register ./dist/index.js",
    "typeorm:migration:generate": "node --require ts-node/register ./node_modules/typeorm/cli.js migration:generate -c development",
    "typeorm:migration:run": "node --require ts-node/register ./node_modules/typeorm/cli.js migration:run -c development",
    "test": "cross-env NODE_ENV=test jest --watchAll --no-cache --runInBand src/domain/**/flashcard.spec.ts",
    "test:ci": "cross-env NODE_ENV=test jest --no-cache --runInBand",
    "format:ci": "npx prettier --check .",
    "docker:dev": "docker-compose -f docker-compose-dev.yaml up"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/body-parser": "^1.19.0",
    "@types/express": "^4.17.12",
    "@types/express-locale": "^2.0.0",
    "@types/function-bind": "^1.1.6",
    "@types/hapi": "^18.0.6",
    "@types/i18next-fs-backend": "^1.0.0",
    "@types/jest": "^26.0.24",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^14.18.9",
    "@types/node-polyglot": "^2.4.1",
    "@types/pino": "^6.3.11",
    "@types/redis": "^2.8.29",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^5.6.0",
    "@typescript-eslint/parser": "^5.6.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.4.1",
    "eslint-plugin-json": "^3.1.0",
    "gen-env-types": "^1.0.5",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "ts-jest": "^26.5.4",
    "ts-node-dev": "^1.1.6",
    "tsconfig-paths": "^3.12.0",
    "typed-promisify": "^0.4.0",
    "typescript": "^4.3.2"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv-safe": "^8.2.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "helmet": "^4.6.0",
    "jsonwebtoken": "^8.5.1",
    "node-polyglot": "^2.4.2",
    "pino": "^6.13.2",
    "pino-pretty": "^6.0.0",
    "reflect-metadata": "^0.1.13",
    "sqlite3": "^5.0.2",
    "ts-node": "^9.1.1",
    "tscpaths": "0.0.9",
    "typeorm": "^0.2.31",
    "typescript": "^4.3.2",
    "uuid": "^8.3.2"
  }
}
